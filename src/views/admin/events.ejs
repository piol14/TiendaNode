<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/events.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (events.length > 0) { %>
            <div class="grid">
                <% for (let event of events) { %>
                    <article class="card event-item">
                        <header class="card__header">
                            <h1 class="event__title">Title: <%= event.title %></h1>
                        </header>
                        <div class="card__content">
                            <p class="event__price">Price: <%= event.price %></p>
                            <p class="event__description">Description: <%= event.description %></p>
                           
                            <p class="event__fecha">fecha: <%= event.fecha%></p>
                            <img src="<%= event.imageURL %>" alt="<%= event.title %>" class="event__image">
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-event/<%= event._id %>?edit=true" class="btn">Edit</a>
                            <form action="/admin/delete-event" method="post">
                                <input type="hidden" name="eventId" value="<%= event._id %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Events Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
